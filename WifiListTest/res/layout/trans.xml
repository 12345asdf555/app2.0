<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundload"
    android:gravity="center">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@+id/progress_bar_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_weight="0.06"
            android:background="@drawable/choosebutton1"
            android:text="采集数据"
            android:textColor="@color/white" />

        <com.example.wifilisttest.ProgressWheel
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_bar_two"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            ProgressWheel:barColor="#339BB9"
            ProgressWheel:barWidth="16dp"
            ProgressWheel:rimColor="#44000000"
            ProgressWheel:rimWidth="16dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text="正在进行连接..."
            ProgressWheel:textColor="@color/white"
            ProgressWheel:textSize="16sp" />

</RelativeLayout>